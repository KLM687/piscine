#include <unistd.h>
#include <stdio.h>

int		ft_str_is_alpha_numerique(char *str,int i)
{
	
	if (str[i] >= 'A' && str[i] <= 'Z')
	{
		return (1);
	}
	if (str[i] >= 'a' && str[i] <= 'z')
	{
		return (1);
	}
	if (str[i] >= '0' || str[i] <= '9')
	{
		return (1);
	}
	return (0);
}


char *ft_strcapitalize(char *str)
{
	int i;
	int alpha;
	
	i = 0;
	while (str[i] != '\0')
	{
		alpha=ft_str_is_alpha_numerique(str, i)
	}

}



int main ()
{
	char str[5]= "salut";
	ft_strcapitalize(str);


